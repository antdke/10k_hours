<div class="flex pt-8 gap-x-12">
  <div class="bg-white p-4 border border-black">
    <h3 class="text-2xl font-bold mb-4">Things to do...</h3>
    <p><%= link_to 'Create a post', new_post_path, class: 'underline' %></p>
    <p><%= link_to 'Edit project details', settings_path, class: 'underline' %></p>
    <p class="mt-4"><%= link_to 'Request a feature', 'https://github.com/ryanckulp/10k_hours/issues/new', class: 'underline' %></p>
  </div>
  <div class="flex-1 bg-white p-4 border border-black max-w-xl">
    <h3 class="text-2xl font-bold mb-4">Draft Posts</h3>

    <ul>
      <% Post.draft.newest_to_oldest.each do |post| %>
        <li><%= link_to post.title, edit_post_path(post.slug), class: 'text-brand-orange' %></li>
      <% end %>
    </ul>

    <%= "<i>none</i>".html_safe if Post.draft.count.zero? %>
  </div>
</div>
