<% meta title: @post.title, description: @post.truncated_preview %>

<meta name="twitter:title" content="<%= @post.title %>">
<meta property="og:description" content="<%= @post.truncated_preview %>">

<% featured_image = @post.featured_image_url %>

<% if featured_image %>
  <meta name="twitter:image" content="<%= image_url featured_image %>">
  <meta name="og:image" content="<%= image_url featured_image %>">
<% end %>

<%= render @post %>

<div class="text-center my-8">
    <a href="<%= "/posts/#{@prev_post.first.slug}" if @prev_post.size > 0 %>"
       class="<%= "text-gray-300 cursor-default pointer-events-none" if @prev_post.size < 1 %>"
    > 
      ‹ Prev 
    </a> 
    | 
    <a 
        href="<%= "/posts/#{@next_post.last.slug}" if @next_post.size > 0 %>"
        class="<%= "text-gray-300 cursor-default pointer-events-none" if @next_post.size < 1 %>"
      > 
      Next › 
    </a>
</div>
